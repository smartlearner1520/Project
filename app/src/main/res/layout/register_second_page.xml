<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register"
    tools:context="com.example.yanglei.myapplication.RegisterSecondPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/email1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/email2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/email3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/email4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:text="If you did not receive the email\n Please press resend button" />

    <Button
        android:id="@+id/resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="RESEND"
        android:gravity="center"
        android:background="@drawable/buttonwhite"
        android:textColor="@color/white" />/>

    <Button
        android:id="@+id/verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Continue"
        android:gravity="center"
        android:background="@drawable/buttonwhite"
        android:textColor="@color/white" />/>

    <TextView
        android:id="@+id/Logout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="514dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</LinearLayout>
