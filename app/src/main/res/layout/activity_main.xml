<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblue"
    tools:context="com.example.yanglei.myapplication.MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/tech"
        android:gravity="bottom"
        android:text="P r o j e c t"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:textColor="@color/darkgrey"
            android:text="@string/Username" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameText"
            android:layout_alignLeft="@id/usernameText"
            android:layout_alignStart="@id/usernameText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="46dp"
            android:inputType="textEmailAddress"
            android:layout_marginRight="46dp"/>

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/usernameText"
            android:layout_alignStart="@+id/usernameText"
            android:layout_below="@+id/username"
            android:layout_marginTop="11dp"
            android:textColor="@color/darkgrey"
            android:text="@string/Password" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_alignLeft="@id/passwordText"
            android:layout_alignStart="@id/passwordText"
            android:layout_below="@id/passwordText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"/>
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_alignLeft="@id/password"
            android:layout_alignStart="@id/password"
            android:layout_alignEnd="@id/password"
            android:layout_alignRight="@id/password"
            android:gravity="center"
            android:textColor="@color/lightblue"
            android:backgroundTint="@color/darkgrey"
            android:text="@string/login"/>

        <TextView
            android:id="@+id/Something"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/signuptext"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="Something"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/signuptext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/SignUp"
            android:textSize="16dp" />


    </RelativeLayout>

</LinearLayout>
