<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register"
    tools:context="com.example.yanglei.myapplication.RegisterSecondPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/sms11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/sms12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/sms13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/sms14"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="234dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/notice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#8098c9"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:text="If you did not receive the sms\n Please press resend button"
        />

    <Button
        android:id="@+id/resend3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Resend"
        android:gravity="center"
        android:background="@drawable/buttonwhite"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/verification3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Continue"
        android:gravity="center"
        android:background="@drawable/buttonwhite"
        android:textColor="@color/white" />


</LinearLayout>
