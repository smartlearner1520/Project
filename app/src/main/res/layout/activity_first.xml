<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical"
    tools:context="com.example.yanglei.myapplication.RegisterFirstPage"
    android:weightSum="1">

    <TextView
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="CREATE ACCOUNT"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:text="@string/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:paddingRight="5dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/username"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:backgroundTint="#b4b6b9"
            android:drawableLeft="@drawable/user"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/untext"
            android:paddingLeft="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c417ccd6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:paddingRight="5dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:backgroundTint="#8098c9"
            android:drawableLeft="@drawable/pw1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/pwtext"
            android:paddingLeft="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c417ccd6" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NRICtxt"
            android:text="NRIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:paddingRight="5dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/NRIC"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:backgroundTint="#8098c9"
            android:drawableLeft="@drawable/ic"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ictext"
            android:paddingLeft="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c417ccd6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Phonetxt"
            android:text="Moblie Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/CC"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8098c9"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/mp"
                android:inputType="phone" />

            <EditText
                android:id="@+id/Phone"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#8098c9"
                android:textColor="@color/white"
                android:layout_weight="1.01" />

        </LinearLayout>


        <TextView
            android:id="@+id/pntext"
            android:paddingLeft="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c417ccd6" />

    </LinearLayout>

    <Button
        android:id="@+id/Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:text="Continue"
        android:background="@drawable/buttonwhite"
        android:textColor="@color/white" />

</LinearLayout>
